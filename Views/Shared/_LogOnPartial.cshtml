@if (Request.IsAuthenticated) {
    <p>
        Здравствуйте, @Html.ActionLink(User.Identity.Name, "ChangePassword", "Account", null, new { @class = "username" })!
        @Html.ActionLink("Выйти", "LogOff", "Account")
    </p>
} else {
    <ul>
        <li>@Html.ActionLink("Зарегистрироваться", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", data_dialog_title = "Регистрация" })</li>
        <li>@Html.ActionLink("Войти", "LogOn", "Account", routeValues: null, htmlAttributes: new { id = "logonLink", data_dialog_title = "Авторизация" })</li>
    </ul>
}